# ============================================
# YOUMOVE - Environment Variables Template
# ============================================
# Copy this file to .env.local for development
# Copy to .env.staging for staging
# Copy to .env.production for production
# ============================================

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# Application
NEXT_PUBLIC_APP_NAME=YOUMOVE
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# OpenAI / ChatGPT Integration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true

# Feature Flags
NEXT_PUBLIC_FEATURE_AI_COACH=true
NEXT_PUBLIC_FEATURE_SOCIAL=false
NEXT_PUBLIC_FEATURE_PREMIUM=false

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry (Optional)
SENTRY_DSN=
